{% style %}
.zora-auth-form-component{
  max-height: 65dvh;
  overflow-y: scroll
  }
  .zora-auth-form-component::-webkit-scrollbar{
    display: none;
  }
  .zora-form-pwd-box,.zora-form-register-code-box{
    position: relative;
    width: 100%;
  }
  .switch-code,.switch-pwd,.auth-send{
    height: 100%;
    padding: 0 .8rem;
    background-color: var(--zora-badge-hot);
    border-radius: 20px;
    color: var(--zora-surface);
    border: 1px solid var(--zora-primary);
    transition: all .3s ease-in-out;
  }
  .switch-code:hover,.switch-pwd:hover{
    padding: 0 1.5rem;
    background-color: var(--zora-primary-hover);
  }
  @media screen and (max-width: 767px){
    .zora-auth-form-component{
      max-height: 55dvh;
    }
  }
{%endstyle%}

<zora-auth-form-component
  class="zora-auth-form-component"
  data-first-name="zora-firstName"
  data-last-name="zora-lastName"
  data-pwd="zora-password"
  data-email="zora-email"
  data-market-email="zora-market-email"
  data-market-Sms="zora-market-sms"
  data-submit="zora-submit"
  data-switch-code="switch-code"
  data-switch-pwd="switch-pwd"
  data-auth-code="zora-verify-auth"
  data-register-code="zora-register-code"
>
  <form action="#" id="zora-auth-form" onkeydown="if (event.keyCode === 13) return false;">
    <label for="zora-firstName"></label><input id="zora-firstName" type="text" class="zora-input zora-form-input hidden" placeholder="{{ 'zora.firstName' | t }}" />
    <label for="zora-lastName"></label><input id="zora-lastName" type="text" class="zora-input zora-form-input hidden" placeholder="{{ 'zora.lastName' | t }}" />
    <div class="zora-form-email-box">
      <label for="zora-email"></label><input id="zora-email" type="email" class="zora-input zora-form-input" placeholder="{{ 'zora.email' | t }}" />
      <div class="zora-verify-box hidden">
        <label for="zora-verify-code"></label><input id="zora-verify-code" type="text" class="zora-input zora-form-input" placeholder="{{ 'zora.verify_code' | t }}" />
        <div class="zora-send-verify">
          <button class="zora-code-send">{{ 'zora.send' | t }}</button>
          <span class="zora-ex hidden">0s</span>
          <button class="zora-code-verify  zora-disabled hidden"  disabled>{{ 'zora.verify' | t }}</button>
        </div>
      </div>
    </div>
    <div class="zora-form-pwd-box">
      <label for="zora-password"></label><input id="zora-password" type="password" class="zora-input zora-form-input" placeholder="{{ 'zora.password' | t }}" />
      <label for="zora-verify-auth"></label><input id="zora-verify-auth" type="text" class="zora-input zora-form-input hidden" placeholder="{{ 'zora.verify_auth' | t }}" />
      <div class="zora-verify-box zora-auth-way-box">
        <button class="switch-code hidden">{{ 'zora.password' |  t }}</button>
        <button class="switch-pwd">{{ 'zora.verify_auth' |  t }}</button>
        <button class="auth-send hidden">{{ 'zora.send' | t }}</button>
      </div>
    </div>
    <div class="zora-check-box hidden">
      <div class="zora-check-item">
        <input type="checkbox" id="zora-market-email" />
        <label for="zora-market-email">{{ 'zora.market_email' | t }}</label>
      </div>
      <div class="zora-check-item">
        <input type="checkbox" id="zora-market-sms" />
        <label for="zora-market-sms">{{ 'zora.market_SMS' | t }}</label>
      </div>
    </div>
    <div class="zora-policy-box">
      <p class="zora-policy-text">{{ 'zora.policy' | t }}</p>
    </div>
    <div class="zora-err-box hidden-scroller">
      <span class="zora-err-item err-info hidden">{{ 'zora.missing_info' | t}}</span>
      <span class="zora-err-item err-pwd hidden">{{ 'zora.invalid_password' | t }}</span>
      <span class="zora-err-item err-email hidden">{{ 'zora.invalid_email' | t }}</span>
    </div>
    <button id="zora-submit" class="zora-btn zora-disabled-btn" disabled type="submit">{{ 'zora.chat_btn' | t }}</button>
  </form>
</zora-auth-form-component>
